 .header{
   display: flex;
   border-left: 2px solid cornflowerblue;
   align-items: center;
   justify-content: space-between;
   padding: 5px;
 }
 .text-all {
   color:blue;
   font-size: 10px;
 }
 .content {
   display: flex;
   justify-content: center;
   flex-direction: row;
   flex-wrap: wrap;
 }
 .content-item {
   width: 45%;
   height: 250rpx;
   background-color: blanchedalmond;
   margin: 5px;
   position: relative;
 }
 .content-item image {
   width: 100%;
   height: 100%;
 }
 .content-item-text {
   position: absolute;
   bottom: 0;
   font-size: 10px;
   color: #fff;
   background: -webkit-linear-gradient(bottom,rgba(0,0,0,0.8),rgba(0,0,0,0));
   height:48rpx;
   width:98%;
   display:flex;
   flex-direction: column;
   justify-content: flex-end;
   padding: 1%;
 }
 .list-item {
   height: 500rpx;
   width: 100%;
 }
 .list-item-image {
   height: 300rpx;
   width: 100%;
   position: relative;
 }
 .list-item-image image {
   height: 100%;
   width: 100%;
 }
 .list-item-image image.avatar {
   width: 100rpx;
   height: 100rpx;
   border-radius: 50%;
   position: absolute;
   bottom: -50rpx;
   right: 100rpx;
 }
 .list-item-text {
   height: 200rpx;
   width: 100%;
   background-color:antiquewhite;
 }
